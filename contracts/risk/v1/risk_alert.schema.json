{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tenon.internal/schemas/risk/v1/risk_alert.schema.json",
  "title": "RiskAlert",
  "description": "Alerta institucional basada en riesgo - RFC-13 §7",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "alert_id",
    "alert_type",
    "aggregate_id",
    "signal_ids",
    "evidence_refs",
    "potential_impact",
    "operational_recommendation",
    "raised_at",
    "alert_version"
  ],
  "properties": {
    "alert_id": {
      "type": "string",
      "minLength": 1,
      "description": "Identificador único de la alerta"
    },
    "alert_type": {
      "type": "string",
      "enum": [
        "EARLY_WARNING",
        "RISK_ESCALATION",
        "INSTITUTIONAL_BREACH"
      ],
      "description": "Tipo de alerta institucional - RFC-13 §7.2"
    },
    "aggregate_id": {
      "type": "string",
      "minLength": 1,
      "description": "Referencia al RiskAggregate que origina la alerta"
    },
    "signal_ids": {
      "type": "array",
      "minItems": 1,
      "description": "IDs de las señales de riesgo que sustentan la alerta",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "evidence_refs": {
      "type": "array",
      "minItems": 1,
      "description": "Referencias a evidencia inmutable que sustenta la alerta",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "potential_impact": {
      "type": "string",
      "minLength": 1,
      "description": "Descripción del impacto potencial institucional (financiero, operativo, legal)"
    },
    "operational_recommendation": {
      "type": "string",
      "minLength": 1,
      "description": "Recomendación operativa para intervención humana (RFC-13 §7.1)"
    },
    "raised_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp de generación de la alerta"
    },
    "alert_version": {
      "type": "string",
      "minLength": 1,
      "description": "Versión del modelo de alerting (gobernanza)"
    },
    "context": {
      "type": "object",
      "description": "Contexto adicional opcional (tendencias, comparativas, etc.)"
    }
  }
}
